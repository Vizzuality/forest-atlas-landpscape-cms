{
  "width": {{{width}}},
  "height": {{{height}}},
  "padding": "strict",
  "data": [{
    "name": "table",
    "values": {{{data}}}
  }],
  "scales": [{
    "name": "x",
    "type": "ordinal",
    "range": "width",
    "domain": {
      "data": "table",
      "field": {{{xColumn}}}
    }
  }, {
    "name": "y",
    "type": "linear",
    "range": "height",
    "domain": {
      "data": "table",
      "field": {{{yColumn}}}
    },
    "nice": true
  }],
  "axes": [{
    "type": "x",
    "scale": "x",
    "title": {{{xLabel}}}
  }, {
    "type": "y",
    "scale": "y",
    "title": {{{yLabel}}},
    "properties": {
      "title": {
        "angle": {"value": 0},
        "y":{"value": -20 },
        "x":{"value": -3 },
        "font-family":{ "value":"Fira Sans" }
      }
    }
  }],
  "marks": [{
    "type": "rect",
    "from": {
      "data": "table"
    },
    "properties": {
      "enter": {
        "x": {
          "scale": "x",
          "field": {{{xColumn}}}
        },
        "width": {
          "scale": "x",
          "band": true,
          "offset": -1
        },
        "y": {
          "scale": "y",
          "field": {{{yColumn}}}
        },
        "y2": {
          "scale": "y",
          "value": 0
        }
      },
      "update": {
        "fill": {
          "value": "steelblue"
        }
      }
    }
  }]
}
