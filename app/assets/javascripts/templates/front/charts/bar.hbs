{
  "width": {{{width}}},
  "height": {{{height}}},
  "padding": "strict",
  "data": [{
    "name": "table",
    "values": {{{data}}}
  }],
  "scales": [{
    "name": "x",
    "type": "ordinal",
    "range": "width",
    "domain": {
      "data": "table",
      "field": {{{xColumn}}}
    }
  }, {
    "name": "y",
    "type": "linear",
    "range": "height",
    "domain": {
      "data": "table",
      "field": {{{yColumn}}}
    },
    "nice": true
  },
  {
    "name": "color",
    "type": "ordinal",
    "range": ["#e6e6e6","#97be32","#5c770a"],
    "domain": {"data": "table","field": {{{xColumn}}} }
  }],
  "axes": [{
    "type": "x",
    "scale": "x"
  }, {
    "type": "y",
    "scale": "y"
  }],
  "marks": [{
    "type": "rect",
    "from": {
      "data": "table"
    },
    "properties": {
      "enter": {
        "x": {
          "scale": "x",
          "field": {{{xColumn}}}
        },
        "width": {
          "scale": "x",
          "band": true,
          "offset": -1
        },
        "y": {
          "scale": "y",
          "field": {{{yColumn}}}
        },
        "y2": {
          "scale": "y",
          "value": 0
        }
      },
      "update": {
        "fill": {
          "field": {{{xColumn}}},
          "scale": "color"
        }
      }
    }
  }]
}
