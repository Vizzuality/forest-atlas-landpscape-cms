{
  "width": {{{width}}},
  "height": {{{math height "+" 100}}},
  "padding": "strict",
  "data": [{
    "name": "table",
    "values": {{{data}}}
  }],
  "scales": [{
    "name": "x",
    "type": "ordinal",
    "range": "width",
    "domain": {
      "data": "table",
      "field": {{{xColumn}}}
    }
  }, {
    "name": "y",
    "type": "linear",
    "range": "height",
    "domain": {
      "data": "table",
      "field": {{{yColumn}}}
    },
    "nice": true
  },
  {
    "name": "color",
    "type": "ordinal",
    "range": ["#e6e6e6","#97be32","#5c770a"],
    "domain": {"data": "table","field": {{{xColumn}}} }
  }],
  "axes": [{
      "layer": "back",
      "type": "x",
      "scale": "x",
      "tickSize": 5,
      "properties": {
      "labels": {
        "text": {"template": "\{{datum.data}}"},
        "align": {"value": "left"},
        "baseline": {"value": "middle"},
        "angle": {"value": 45},
        "fontSize": {"value": 11}
        }
      }
    }, {
    "grid": true,
    "layer": "back",
    "type": "y",
    "scale": "y",
    "tickSize": 30,
    "properties": {
      "grid": {
        "stroke": {"value": "#eeeeee"},
        "strokeWidth": {"value": 2},
        "strokeDash": {"value": [5, 5]}
      },
      "majorTicks": {"strokeWidth": {"value": 2}},
      "ticks": {
        "stroke": {"value": "#eeeeee"},
        "strokeDash": {"value": [5, 5]}
      },
      "labels": {
        "text": {
          "template": "\{{datum.data | number:'.2s' }}"
        },
        "align": {"value": "left"},
        "baseline": {"value": "bottom"},
        "fontSize": {"value": 11}
        }
      }
  }],
  "marks": [{
    "type": "rect",
    "from": {
      "data": "table"
    },
    "properties": {
      "enter": {
        "x": {
          "scale": "x",
          "field": {{{xColumn}}},
          "offset": 10
        },
        "width": {
          "scale": "x",
          "band": true,
          "offset": -15
        },
        "y": {
          "scale": "y",
          "field": {{{yColumn}}}
        },
        "y2": {
          "scale": "y",
          "value": 0
        }
      },
      "update": {
        "fill": {
          "field": {{{xColumn}}},
          "scale": "color"
        }
      }
    }
  }]
}
