<div class="c-steps-bar">
  <div class="wrapper">
    <ul class="steps">
      <% form_steps.each_with_index do |step, i| %>
      <% next if step == 'style' && site&.site_template&.name == 'INDIA' %>
      <li>
        <% tab_index = disable_button?(form_steps, step, current_step, site.id, local_assigns[:invalid_steps], local_assigns[:invalid_state]) ? '-1' : '0' %>
        <% html_class =
              if disable_button?(form_steps, step, current_step, site.id, local_assigns[:invalid_steps], local_assigns[:invalid_state])
                '-disabled'
              elsif active_button?(form_steps, step, current_step, site.id)
                '-active'
              else
                ''
              end
        %>
        <%= link_to step_names[i], wizard_path(step), 'tabindex': tab_index, class: html_class,  data: { turbolinks: 'false' } %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
