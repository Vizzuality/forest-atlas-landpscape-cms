<%= render partial: 'shared/navigation_header', locals: {form_steps: @site.form_steps, id: @site.id, current_step: step} %>
<%= Gon::Base.render_data(camel_case: true, camel_depth: 3) %>

<%= form_for @site, url: wizard_path, method: :put do |f| %>
  <div class="l-site-creation -name">
    <div class="wrapper">
      <h1>Site name</h1>
      <p class="intro">Please choose a name for the site and provide the list of all the URLs it can be accessed from.</p>

      <div class="site-name">
        <%= f.label :name, for: 'name' %>
        <%= f.text_field :name, id:'name', placeholder: 'Type here the siteâ€™s name' %>
      </div>

      <div class="js-urls"></div>

    </div>
  </div>
  <%= render partial: 'footer', locals: { f: f} %>
<% end %>
<%= render partial: 'shared/errors', locals: { resource: @site } %>
