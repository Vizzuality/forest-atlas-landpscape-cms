<div class="c-action-bar">
  <div class="wrapper">
    <%= link_to 'Cancel', admin_sites_path, class: 'c-button -outline -dark-text' %>
    <div>
      <% if @site.id %>
        <% unless local_assigns[:no_continue] %>
          <%= f.button Admin::SiteStepsController::CONTINUE, value: Admin::SiteStepsController::CONTINUE, type: 'submit', method: :put, class: 'c-button -outline -dark-text' %>
        <% end %>
        <% if step == 'style' %>
          <%= f.button Admin::SiteStepsController::PREVIEW, value: Admin::SiteStepsController::PREVIEW, type: 'button', class: 'c-button -outline -dark-text js-open-preview' %>
        <% end %>
        <%= f.button Admin::SiteStepsController::SAVE, value: Admin::SiteStepsController::SAVE, type: 'submit', method: :put, class: 'c-button' %>
      <% else %>
        <% unless local_assigns[:last_step] %>
          <%= f.button Admin::SiteStepsController::CONTINUE, value: Admin::SiteStepsController::CONTINUE, type: 'submit', method: :put, class: 'c-button' %>
        <% end %>
        <% if local_assigns[:last_step] %>
          <%= f.button Admin::SiteStepsController::SAVE, value: Admin::SiteStepsController::SAVE, type: 'submit', method: :put, class: 'c-button' %>
        <% end %>
    <% end %>
    </div>
  </div>
</div>
