<div class="c-action-bar">
  <div class="wrapper">
    <%= link_to 'Cancel', admin_sites_path, class: 'c-button -outline -dark-text js-cancel' %>
    <div>
      <button type="button" class="c-button js-continue <%= @site.id ? '-outline -dark-text' : '' %>">Continue</button>
      <% if @site.id %>
        <button type="button" class="c-button js-save">Save changes</button>
      <% end %>
    </div>
  </div>
</div>
