<%= form_for([:admin, context]) do |f| %>
    <% if context.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(context.errors.count, "error") %> prohibited this context from being saved:</h2>

          <ul>
            <% context.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset class="form-group row">
      <%= f.label :name, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10"><%= f.text_field :name, class: 'form-control' %></div>
    </fieldset>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Show', admin_context_path(context), class: 'btn btn-secondary' unless context.id.nil? %>
        <%= link_to 'Back', admin_contexts_path, class: 'btn btn-secondary' %>
      </div>
    </div>
<% end %>
