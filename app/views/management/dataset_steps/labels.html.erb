<div class="c-extended-header">
  <div class="wrapper">
    <div class="description">
      <h1>Labels</h1>
      <p>Selection of the special fields of the dataset</p>
    </div>
  </div>
</div>


<%= render partial: 'shared/navigation_header', locals: {form_steps: wizard_steps, id: @dataset.id, current_step: step, step_names: @steps_names} %>
<%= Gon::Base.render_data(camel_case: true, camel_depth: 3) %>


<%= form_for @dataset, url: wizard_path, method: :put do |f| %>
  <div class="l-page-creation -title">
    <div class="wrapper">

      <div class="inputs-container">
        <div class="dataset-title">
          <%= f.label :latitude, for: 'Latitude' %>
          <%= text_field_tag 'dataset[legend][lat]', f.object.legend[:lat], placeholder: 'Type the field for latitude' %>
        </div>

        <div class="dataset-tags">
          <%= f.label :longitude, for: 'Longitude' %>
          <%= text_field_tag 'dataset[legend][lon]', f.object.legend[:lon], placeholder: 'Type the field for longitude' %>
        </div>

        <div class="dataset-tags">
          <%= f.label :country, for: 'Country' %>
          <%= text_field_tag 'dataset[legend][country]', f.object.legend[:country], placeholder: 'Type the field for country' %>
        </div>

      <div class="dataset-tags">
        <%= f.label :region, for: 'Region' %>
        <%= text_field_tag 'dataset[legend][region]', f.object.legend[:region], placeholder: 'Type the field for region' %>
      </div>

      <div class="js-labels"></div>

    </div>
  </div>
  <%= render partial: 'management/steps_shared/footer', locals: { f: f, cancel: management_site_datasets_path(@site.slug)} %>
<% end %>
<%= render partial: 'shared/errors', locals: { resource: @dataset } %>
