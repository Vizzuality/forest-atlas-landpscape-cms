<% content_for :extended_header do %>
  <div class="c-extended-header -high">
    <div class="wrapper">
      <div class="description">
        <h1>Open Content</h1>
        <p>Fill in the page's title, description and URI and start writing its content.</p>
      </div>
      <div></div>
    </div>
  </div>
<% end %>

<%= render partial: 'shared/navigation_header', locals: {form_steps: form_steps, id: @page.id, current_step: step} %>
<%= render partial: 'shared/errors', locals: { resource: @page } %>

<%= form_for(@page, url: wizard_path, method: :put, :html => { :class => 'js-form' }) do |f| %>
  <div class="l-page-creation -wysiwyg">
      <% if @page.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@page.errors.count, "error") %> prohibited this site_page from being saved:</h2>

            <ul>
              <% @page.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= f.hidden_field :content_type %>

      <div class="wrapper">

        <!--
        <div class="c-fieldset">
          <%= f.text_field :name, id: 'title', placeholder: 'Page\'s title' %>
          <%= f.label 'Page\'s title', for: 'title' %>
        </div>
        <div class="c-fieldset">
          <%= f.text_field :description, id: 'description', placeholder: 'Short description' %>
          <%= f.label 'Short description', for: 'description' %>
        </div>
        <div class="c-fieldset">
          <%= f.text_field :uri, id: 'uri', placeholder: 'Page\'s URI' %>
          <%= f.label 'Page\'s URI', for: 'uri' %>
        </div>
        <div class="c-checkbox">
          <%= f.check_box :show_on_menu, id: 'show_on_menu' %>
          <%= f.label :show_on_menu, for: 'show_on_menu' %>
        </div>
        -->

        <div class="c-wysiwyg">
          <%= f.fields_for :content, OpenStruct.new(@page.content) do |ff| %>
              <%= ff.hidden_field :body, class: 'js-content' %>
              <%= ff.text_area :json, class: 'js-content-json' %>
          <% end %>
        </div>
      </div>

      <%#= f.label :url, class: 'col-sm-2 form-control-label' %>

      <%#= f.label :site_id, class: 'col-sm-2 form-control-label' %>
      <%#= f.collection_select :site_id, Site.all, :id, :name, {}, {:class => 'form-control'} %>

      <%#= f.label :parent_id, class: 'col-sm-2 form-control-label' %>
      <%#= f.collection_select :parent_id, SitePage.where(site_id: @page.site_id), :id, :name, {}, {:class => 'form-control'} %>

  </div>
  <%= render partial: 'footer', locals: {f: f} %>
<% end %>
