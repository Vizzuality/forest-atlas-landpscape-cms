<!DOCTYPE html>
<html>
<head>
  <title><%= ForestAtlasLandscapeCms::Application.config.site_name %></title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.quilljs.com/1.1.6/quill.core.css">
  <%= stylesheet_link_tag 'front/application-theme-fa', media: 'all', 'data-turbolinks-track': 'reload' if @site_page.site_template.name.eql? 'Forest Atlas' %>
  <%= stylesheet_link_tag 'front/application-theme-lsa', media: 'all', 'data-turbolinks-track': 'reload' if @site_page.site_template.name.eql? 'Landscape Application' %>
  <%= favicon_link_tag %>
  <%= yield :head %>
</head>

<body <%= yield :body_class %>>
  <%= render 'front/menu' %>
  <%= render 'front/icons' %>
  <%= yield %>
  <script>
    window.template = '<%= (@site_page.site_template.name.eql? 'Forest Atlas') ? 'fa' : 'lsa' %>';
  </script>
  <script src="//cdn.quilljs.com/1.1.6/quill.js" type="text/javascript"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= yield :external_js %>
</body>
</html>
