<%= form_tag 'send-feedback', method: :post do %>
  <%= text_field_tag 'name', placeholder: 'Your name' %>
  <%= text_field_tag 'email', placeholder: 'Your email' %>
  <%= text_field_tag 'subject', placeholder: 'Subject' %>
  <%= text_field_tag 'message', placeholder: 'Type your message...' %>
  <%= text_area_tag 'Send Feedback' %>
  <%= hidden_field_tag 'to', @contact_email %>
<% end %>
