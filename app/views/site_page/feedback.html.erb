<%= form_tag 'send-feedback', method: :post do %>
  <%= text_field_tag 'user_name', nil, placeholder: 'Your name' %>
  <%= text_field_tag 'user_email', nil, placeholder: 'Your email' %>
  <%= text_field_tag 'subject', nil, placeholder: 'Subject' %>
  <%= text_area_tag 'message', nil, placeholder: 'Type your message...' %>
  <%= submit_tag 'Send Feedback' %>
  <%= hidden_field_tag 'to', @contact_email %>
<% end %>
